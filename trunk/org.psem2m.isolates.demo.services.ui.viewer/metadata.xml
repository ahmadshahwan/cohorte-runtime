<?xml version="1.0" encoding="UTF-8"?>
<ipojo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd"
    xmlns="org.apache.felix.ipojo" xmlns:jmx="org.apache.felix.ipojo.handlers.jmx">



    <!-- The UI service -->
    <component classname="org.psem2m.isolates.demo.services.ui.viewer.impl.CUiSvc"
        architecture="true" immediate="true" name="isolates-demo-ui-viewer-factory">

        <provides specifications="org.psem2m.isolates.demo.services.ui.viewer.IUiSvc" />

        <requires field="pIsolateLoggerSvc" optional="false" />

        <requires field="pPlatformDirsSvc" optional="false" />
        
        <requires field="pSvcAgent" optional="false" />

        <callback transition="validate" method="validatePojo" />
        <callback transition="invalidate" method="invalidatePojo" />
    </component>


    <instance component="isolates-demo-ui-viewer-factory"
        name="isolates-demo-ui-viewer" />

</ipojo>
