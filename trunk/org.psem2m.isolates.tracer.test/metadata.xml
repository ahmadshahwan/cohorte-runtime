<?xml version="1.0" encoding="UTF-8"?>
<ipojo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="org.apache.felix.ipojo http://felix.apache.org/ipojo/schemas/CURRENT/core.xsd"
	xmlns="org.apache.felix.ipojo" xmlns:jmx="org.apache.felix.ipojo.handlers.jmx">

	<!-- The logger, specific to the bundle
	ATTENTION : like the activator is already instanciate (cf. OSGI actovator),
	we define the attribute "factory-method" to indicate to iPojo how it retreive
	the existing instance to "define" the component with it
	-->
	<component
		classname="org.psem2m.isolates.tracer.test.CBundleTracerTestActivator"
		architecture="true" immediate="true" name="psem2m-tracertest-isolatelogger-factory"
		factory-method="getInstance" >

		<provides specifications="org.psem2m.isolates.base.IIsolateLoggerSvc" />

		<callback transition="validate" method="validatePojo" />
		<callback transition="invalidate" method="invalidatePojo" />
	</component>


	<!-- The command "TracableChannels"  service -->
	<component
		classname="org.psem2m.isolates.tracer.test.impl.CCommandTracableChannels"
		architecture="true" immediate="true" name="psem2m-tracertest-command-tracablechannels-factory" >

		<provides specifications="org.apache.felix.shell.Command" />

		<requires field="pTracerSvc" optional="false"
			from="psem2m-tracer" />

		<requires field="pIsolateLoggerSvc" optional="false"
			from="psem2m-tracertest-isolatelogger"/>

		<callback transition="validate" method="validatePojo" />
		<callback transition="invalidate" method="invalidatePojo" />
	</component>

	<!-- The command "TraceChannels"  service -->
	<component
		classname="org.psem2m.isolates.tracer.test.impl.CCommandTraceChannels"
		architecture="true" immediate="true" name="psem2m-tracertest-command-tracechannels-factory">

		<provides specifications="org.apache.felix.shell.Command" />

		<requires field="pTracerSvc" optional="false"
			from="psem2m-tracer" />

		<requires field="pIsolateLoggerSvc" optional="false"
			from="psem2m-tracertest-isolatelogger"/>

		<callback transition="validate" method="validatePojo" />
		<callback transition="invalidate" method="invalidatePojo" />
	</component>


	<instance component="psem2m-tracertest-isolatelogger-factory"
		name="psem2m-tracertest-isolatelogger" />

	<instance component="psem2m-tracertest-command-tracablechannels-factory"
		name="psem2m-tracertest-command-tracablechannels" />

	<instance component="psem2m-tracertest-command-tracechannels-factory"
		name="psem2m-tracertest-command-tracechannels" />

</ipojo>
