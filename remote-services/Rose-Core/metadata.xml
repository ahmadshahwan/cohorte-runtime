<ipojo>


	<component name="rose.component.autoexport"
		classname="org.ow2.chameleon.rose.impl.GenericEndpointFactory">
		<properties>
			<property name="export.filter" field="filter" />
		</properties>

		<requires field="logger" optional="true"
			default-implementation="org.ow2.chameleon.rose.util.LogServiceImpl" />

		<requires field="idGenerator" optional="true"
			default-implementation="org.ow2.chameleon.rose.util.DefaultRemoteIdGenerator" />

		<callback transition="validate" method="start" />
		<callback transition="invalidate" method="stop" />

		<requires optional="false" id="exporter">
			<callback type="bind" method="bindEndpointFactory" />
		</requires>
	</component>


</ipojo>