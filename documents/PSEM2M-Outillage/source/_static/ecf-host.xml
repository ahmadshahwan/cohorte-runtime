<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" activate="start" deactivate="stop" immediate="true" name="service.tracer">
   <implementation class="org.psem2m.service.tracer.CSvcTrace"/>
   <!-- Export de toutes les interfaces -->
   <property name="service.exported.interfaces" type="String" value="*"/>
   <!-- Choix du mode d'exportation -->
   <property name="service.exported.configs" type="String" value="ecf.generic.server"/>
   <!-- Propriété spécifique à ecf.generic.server -->
   <property name="org.eclipse.ecf.containerFactoryArgs" type="String" value="ecftcp://localhost:38000/server"/>
   <service>
      <provide interface="org.psem2m.service.ISvcTrace"/>
   </service>
   <!-- On ne démarre le bundle que quand un container correspond au mode d'exportation est prêt -->
   <reference cardinality="1..1" interface="org.eclipse.ecf.core.IContainerFactory" name="IContainerFactory" policy="static"/>
</scr:component>
